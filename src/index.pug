doctype html
html(lang="ru") 
    head
        meta(charset="utf-8")
        title Fifteen
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/reset.css")
        link(rel="stylesheet" href="/css/index.css")
    body
        - const values = new Array(16).fill(0).map((_item, index) => index + 1);
        .page
            h1 Игра в "Пятнашки"
            .game#game
                .fifteen#fifteen
                    each val in values
                      button.item(data-matrix-id=val)
                        span.itemVal= val
                button.button#shuffle Перемешать стандартно
                button.button.shuffleParams#showShuffleParams Показать параметры
                    img#showShuffleParamsIcon(src="./css/white-arrow.png")
                .shuffleCountWrapper#shuffleCountWrapper
                    input#shuffleCount(placeholder='50' type="number" value=50 min=1)
                    button.button#shuffleCountButton На сколько ходов перемешать
        script(src="/js/index.js" type="module")



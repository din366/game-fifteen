body,
html {
    font: 16px/1.4 Georgia, serif;
}

.page {
  max-width: 400px;
  padding: 2rem;
  margin: 0 auto;
  text-align center;
  user-select: none; // чтобы не выделялось курсором
}

h1 {
  font: 2rem/1.2 Georgia;
  margin-bottom: 1em;
}

.game {
  $Shuffle {
    pointer-events: none;
    opacity: 0.7;
  }
}

.fifteen {
  width 100%;
  padding-bottom 100%;
  background: #c0c0c0;
  margin-bottom: 1.5rem;
  position: relative;
  overflow: hidden;
  border-radius: 15px;

  .item {
    outline: none;
    position: absolute;
    left: 0;
    top: 0;
    width 25%;
    height 25%;
    margin: 0;
    padding: 0;
    border: none;
    background: #3b404d;
    color: white;
    font-size: 2rem;
    cursor: pointer;
    box-shadow inset 1px 1px white;
    transition: transform 0.2s, filter 0.5s;

    &Val {
      display: flex;
      align-items: center;
      justify-content: center;
      width 84%;
      height: 84%;
      margin: 8%;
      background-color: #4b4e59;
      border-radius: 10px;
      /*box-shadow: inset 0 0 0 2px #bbbbbb;*/
    }
  }

&Won {
  .item {
    filter: brightness(200%);
  }
}
}

.button {
  color: #fff;
  background #484e5e;
  border-radius: 10px;
  font: 1.2rem/1.4 Georgia, serif;
  border: none;
  cursor: pointer;
  padding: 0.5em 1.5em;

  &hover {
    background: #922ec5;
  }
}

@media only screen and (max-width: 500px) {
  body,
  html {
    font-size: 13px;
  }
}